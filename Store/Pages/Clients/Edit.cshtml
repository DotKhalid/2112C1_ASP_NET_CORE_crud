@page
@model Store.Pages.Clients.EditModel
@{
}


<h1>Update Client </h1>
<br />

@if (@Model.errorMessage.Length > 0)
{
    <div class="alert alert-danger" role="alert">
        <strong>@Model.errorMessage</strong>
    </div>
}


<form method="post">
    <input type="hidden" name="id" value="@Model.clientInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3">Name: </label>
        <div class="col-sm-6">
            <input type="text" name="name" value="@Model.clientInfo.Name" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3">Email: </label>
        <div class="col-sm-6">
            <input type="text" name="email" value="@Model.clientInfo.Email" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3">Phone: </label>
        <div class="col-sm-6">
            <input type="text" name="phone" value="@Model.clientInfo.Phone" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3">Address: </label>
        <div class="col-sm-6">
            <input type="text" name="address" value="@Model.clientInfo.Address" class="form-control" />
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-3 col-sm-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        <div>
            <button class="btn btn-danger" type="reset">Cancel</button>
        </div>
    </div>

    @if (@Model.successMessage.Length > 0)
    {
        <div class="alert alert-primary" role="alert">
            <strong>@Model.successMessage</strong>
        </div>
    }
</form>